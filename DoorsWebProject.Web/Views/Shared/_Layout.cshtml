<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineShopForDoors</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Home/index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Door/smoothDoor.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Door/rangeSliders.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Door/quantitySelector.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Door/imageDoor.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AspNetCoreArchTemplate.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">OnlineShopForDoors</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <!-- Dropdown за Интериорни врати -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="interiorDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Интериорни врати
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="interiorDropdown">
                                <li class="dropdown-submenu">
                                    <a class="dropdown-item dropdown-toggle" href="#">Плътни врати</a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Door" asp-action="Smooth">Гладки врати</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Door" asp-action="Glazed">Профилирани врати</a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Door"
                                       asp-action="Glazed">
                                        Остъклени врати
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Обикновени линкове -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="interiorDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Външни врати
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="interiorDropdown">
                                <li class="dropdown-submenu">
                                    <a class="dropdown-item dropdown-toggle" href="#">Плътни врати</a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Door" asp-action="Smooth">Метални врати</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Door" asp-action="Glazed">Дървени врати</a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Door" asp-action="Glazed">Дървени врати</a>
                                    
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Door" asp-action="Create">Създай</a>
                        </li>
                    </ul>

                    <form asp-controller="Door" asp-action="Search" method="get" class="d-flex" style="margin-right: 20px;">
                        <input type="text" name="searchTerm" class="form-control me-2" placeholder="Търси продукти..." />
                        <button type="submit" class="btn btn-outline-light">Търси</button>
                    </form>

                    <a asp-controller="Wishlist" asp-action="Index" class="btn btn-outline-danger me-2">
                        <i class="bi bi-heart"></i> Любими
                    </a>

                    <!-- Login / Register partial -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - AspNetCoreArchTemplate.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Door/smoothDoor.js" asp-append-version="true"></script>
    <script src="~/js/Door/rangeSliders.js" asp-append-version="true"></script>
    <script src="~/js/Door/quantitySelector.js" asp-append-version="true"></script>
    <script src="~/js/Door/imageDoor.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
