@using DoorsWebProject.Web.ViewModels.Door
 @model IEnumerable<AllDoorsIndexViewModel>


@{
    ViewData["Title"] = "Начало";
}

<p style="color:red; font-size:20px;">Count: @Model?.Count()</p>

    <header class="home-header">
        <h1>Врати БГ</h1>
        <p>Интериорни и входни врати</p>
    </header>

    <section class="hero">
        <h2>Добре дошли!</h2>
        <p>Открийте нашите предложения за висококачествени интериорни и входни врати.</p>
    </section>

    <section class="top-products">
        <h2>Най-продавани врати</h2>
        <div class="product-grid">
            @foreach (var door in Model)
            {
                <div class="product-card">
                    <img src="@door.ImageUrl" alt="@door.Model" />
                    <h3>@door.Model</h3>
                    <span class="price">@door.Price лв.</span>
                </div>
            }
        </div>
    </section>
